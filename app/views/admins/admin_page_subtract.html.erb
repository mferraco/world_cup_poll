<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">&nbsp;</div>
    <div class="col-md-2">
      <form method="post" action="/subtract_score">
        <input type="text" id="team" name="team" placeholder="team" />
        <br><br>
        <input type="text" id="round" name="round" placeholder="round" />
        <br><br>
        <input type="text" id="player" name="player" placeholder="player" />
        <br><br>
        <input type="text" id="score" name="score" placeholder="score" />
        <br><br>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
        <input type="submit" id="submit_score" />
      </form>
    </div>
  </div>
</div>