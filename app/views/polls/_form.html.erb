<%= simple_form_for(@poll) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :tiebreaker %>
    <%= f.input :tier1team1, collection: Poll::TIER_1, label: false %>
    <%= f.input :tier1team2, collection: Poll::TIER_1, label: false %>
    <%= f.input :tier2team1, collection: Poll::TIER_2, label: false %>
    <%= f.input :tier2team1, collection: Poll::TIER_2, label: false %>
    <%= f.input :tier3team1, collection: Poll::TIER_3, label: false %>
    <%= f.input :tier3team2, collection: Poll::TIER_3, label: false %>
    <%= f.input :tier4team1, collection: Poll::TIER_4, label: false %>
    <%= f.input :tier4team2, collection: Poll::TIER_4, label: false %>
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
